    1 REM Digital Waveform Processing
    5 DIM AA(255)
   10 H=2000
   15 CLEAR4
   23 GOS.s; GOS.q
   25 Z=160; GOS.p
   28 GOS.l
   30 Z=96; GOS.p
   32 GOS.s
   34 Z=32; GOS.p
   90 END
 1000pREM Plot Waveform
 1005 MOVE 0,96
 1010 FOR N=0 TO 255
 1020 PLOT13,N,(Z+AA(N)/H)
 1030 NEXT N
 1040 RETURN
 2000sREM Make Sine Wave
 2010 S=0;C=40000
 2020 FOR N=0 TO 255
 2030 AA(N)=-S
 2040 C=C-S/10
 2050 S=S+C/10
 2060 NEXT N
 2070 RETURN
 3000qREM Make Square Wave
 3010 FOR N=0 TO 255
 3020 IF AA(N)>=0 AA(N)=40000
 3030 IF AA(N)<0 AA(N)=-40000
 3035 NEXT N
 3040 RETURN
 4000lREM Low Pass Filter
 4010 B=0
 4020 FOR N=0 TO 255
 4030 B=AA(N)*360/1000+B*697/1000
 4040 AA(N)=B; NEXT N
 4050 RETURN

