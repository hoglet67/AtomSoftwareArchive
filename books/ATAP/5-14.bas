    1 REM Reaction Timer
   10 CLEAR 0
   20 X=ABS(RND)%64; Y=ABS(RND)%48
   30 FOR N=1 TO ABS(RND)%600+300
   35 IF ?#B001<>#FF PRINT "CHEAT!":G.120
   40 WAIT; NEXT N
   50 MOVE X,Y; DRAW X,Y
   60 T=0
   70 DO T=T+1; WAIT
   80 UNTIL ?#B001<>#FF
   90 PRINT "REACTION TIME ="
  100 PRINT T*10/6, " CSEC." '
  110 IF T>18 PRINT "WAKE UP!" '
  120 END

